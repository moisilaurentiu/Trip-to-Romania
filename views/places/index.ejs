<% layout("layouts/boilerplate") %>
<div id="cluster-map"></div>
<h1 class="ml-auto">Attractions to visit</h1>

<% for (let place of places) { %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img
                class="img-fluid"
                src="<%= place.images[0].url %>?q=<%- Math.random() %>"
                alt=""
            />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= place.title %></h5>
                <p class="card-text"><%= place.description %></p>
                <p class="card-text">
                    <small class="text-muted"> <%= place.location %> </small>
                </p>
                <a class="btn btn-primary" href="/places/<%= place._id %>">
                    View <%= place.title %>
                </a>
            </div>
        </div>
    </div>
</div>

<% } %>

<script>
    const token = '<%= process.env.MAPBOX_TOKEN %>'
    const places = <%- JSON.stringify(places) %>
</script>
<script src="/js/clusterMap.js"></script>
